@using Microsoft.AspNet.Identity.EntityFramework;
@using TGVL.Models;
@model IEnumerable<TGVL.Models.CustomRole>

@{
    ViewBag.Title = "Quản lý quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="index.html">Trang chủ</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">Quản lý quyền</a></li>
</ul>

<p>
    @Html.ActionLink("Thêm mới quyền", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon user"></i><span class="break"></span>Quyền</h2>

        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Mã số</th>
                        <th>Tên quyền</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td class="center">
                                @*<a class="btn btn-info" href="#">
                                        <i class="halflings-icon white edit"></i>
                                    </a>*@
                                <i class="halflings-icon white zoom-in"></i>
                                @*@Html.ActionLink("Sửa quyền", "Edit", new { Id = item.Id, @class= "btn btn-success" }, null) |*@
                                <a href="@Url.Action("Edit", "ManageRole", new { Id = item.Id },null)" class="btn btn-primary">
                                    <i class="halflings-icon white edit"></i>
                                </a>
                                <a href="@Url.Action("Delete","ManageRole", new { id = item.Id })" class="btn btn-danger">
                                    <i class="halflings-icon white trash"></i>
                                </a>
                                @*@Html.ActionLink("Xóa quyền", "Delete", new { id = item.Id })*@

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>



