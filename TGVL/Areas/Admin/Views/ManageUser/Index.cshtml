@using TGVL.Models;
@model IEnumerable<TGVL.Models.ApplicationUser>
@{
    ViewBag.Title = "Quản lý user";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="index.html">Trang chủ</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">Quản lý người dùng</a></li>
</ul>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon user"></i><span class="break"></span>Người dùng</h2>

        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>
                            <td>@item.Email</td>
                            <td>
                                @item.Address
                        </td>

                        @*<img src="@Url.Content("~/Areas/Admin/Images/" + item.Avatar)" width="100" height="100" />*@
                        <td class="center">
                            <a href="@Url.Action("Edit", "ManageUser", new { Id = item.Id },null)" class="btn btn-success">
                                <i class="halflings-icon white zoom-in"></i>
                            </a>
                            <a href="@Url.Action("EditRole", "ManageUser", new { Id = item.Id },null)" class="btn btn-info">
                                <i class="halflings-icon white edit"></i>
                            </a>
                            <a href="@Url.Action("Delete", "ManageUser", new { Id = item.Id },null)" class="btn btn-danger">
                                <i class="halflings-icon white trash"></i>
                            </a>
                            @*@Html.ActionLink("Sửa thông tin", "Edit", new { Id = item.Id }, null) |
                                @Html.ActionLink("Sửa quyền", "EditRole", new { Id = item.Id }, null) |
                                @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)*@
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


