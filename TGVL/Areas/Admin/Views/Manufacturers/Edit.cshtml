@model TGVL.Manufacturer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="index.html">Trang chủ</a>
        <i class="icon-angle-right"></i>
    </li>
    <li>
        <i class="icon-edit"></i>
        <a href="#">Chỉnh sửa thông tin</a>
    </li>
</ul>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Chỉnh sửa thông tin</h2>
        </div>
        <div class="box-content">

            <div class="form-horizontal">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(m => m.Flag)


                    <div class="control-group">
                        @*<label>Tên đăng nhập</label>*@
                        <label class="control-label">Tên mới</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Name, new { @class = "input-xlarge focused", required = "required" })
                        </div>
                    </div>
                    <div class="control-group">
                        @*<label>Tên đăng nhập</label>*@
                        <label class="control-label">Logo cũ</label>
                        <div class="controls">
                            <div width="50px" height="50px"><img src="@Url.Content("~/Areas/Admin/Content/img/manufacturer/")" /></div>
                        </div>
                    </div>
                    <div class="control-group">
                        @*<label>Tên đăng nhập</label>*@
                        <label class="control-label">Logo mới</label>
                        <div class="controls">
                            <input type="file" id="Logo" name="upload" />
                        </div>
                    </div>
                  

                    @*<div class="form-group">
                            <label>Ảnh bìa</label>
                            <input type="file"  name="fileUpload"/>
                        </div>*@
                    @*<div class="control-group">
                            <label class="control-label" for="fileInput">File input</label>
                            <div class="controls">
                                <input class="input-file uniform_on" id="fileInput" type="file">
                            </div>
                        </div>*@
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <button class="btn">Hủy</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>