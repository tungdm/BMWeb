@model IEnumerable<TGVL.SysProduct>


@{
    ViewBag.Title = "QUẢN LÝ SẢN PHẨM";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="index.html">Trang chủ</a>
                <i class="icon-angle-right"></i>
            </li>
            <li><a href="#">Quản lý sản phẩm</a></li>
        </ul>

<p>
    @Html.ActionLink("Thêm mới sản phẩm", "Create", null, new { @class = "btn btn-success" })
</p>

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon user"></i><span class="break"></span>Sản Phẩm</h2>

                </div>
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Giá</th>
                                <th>Nhà sản xuất</th>
                                <th>Danh mục</th>
                                <th>Hình ảnh</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Manufacturer.Name</td>
                                    <td>@item.SysCategory.Name</td>
                                    <td>
                                        <img src="@Url.Content("~/Areas/Admin/Content/img/product/" + item.Image)" width="100" height="100" />
                                    </td>
                                    
                                    <td class="center">
                                        <a href="@Url.Action("Edit", "SysProducts", new { Id = item.Id },null)" class="btn btn-success">
                                            <i class="halflings-icon white zoom-in"></i>
                                        </a>
                                        <a href="@Url.Action("Details", "SysProducts", new { Id = item.Id },null)" class="btn btn-info">
                                            <i class="halflings-icon white edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "SysProducts", new { Id = item.Id },null)" class="btn btn-danger">
                                            <i class="halflings-icon white trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
