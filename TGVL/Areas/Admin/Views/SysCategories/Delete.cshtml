@model TGVL.SysCategory

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa</h2>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4>Danh mục hệ thống</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Tên")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Hình ảnh")
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Image)*@
            <img src="@Url.Content("~/Areas/Admin/Images/" + Model.Image)" width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayName("Tên nhóm cha")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SysCategory1.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang chủ", "Index")
        </div>
    }
</div>
