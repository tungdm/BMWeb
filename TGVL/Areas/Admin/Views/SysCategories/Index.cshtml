@model IEnumerable<TGVL.SysCategory>

@{
    ViewBag.Title = "Index";
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon user"></i><span class="break"></span>Danh mục</h2>
            <div class="box-icon">
                <a href="#" class=""><i class="halflings-icon search"></i></a>
                <a href="#" class=""><i class="halflings-icon sort"></i></a>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên")
        </th>
        <th>
            @Html.DisplayName("Hình ảnh")
        </th>
        <th>
            @Html.DisplayName("Tên nhóm cha")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Image)*@
                <img src="@Url.Content("~/Areas/Admin/Images/" + item.Image)" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SysCategory1.Name)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @type="button", @class = "btn btn-info", @style = "color:white" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @type = "button", @class = "btn btn-success", @style = "color:white" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @type = "button", @class = "btn btn-danger", @style = "color:white" })
            </td>
        </tr>
    }

</table>
