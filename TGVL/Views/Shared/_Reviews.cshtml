@model TGVL.Models.ShopReviews
<style>
.review_strip_single {
    position: relative;
    padding: 30px 0 20px;
    margin: 30px 0 25px;
}
#position, .review_strip_single {
    border-bottom: 1px solid #ededed;
}
.review_strip_single img {
    top: -15px;
    position: absolute;
    left: 0;
    border: 4px solid #ededed;
    max-width: 68px;
}
.review_strip_single small {
    float: right;
    font-size: 12px;
    margin-top: -20px;
    font-style: italic;
}
.review_strip_single h4 {
    font-size: 18px;
    margin: -20px 0 35px 90px;
    padding: 0;
}
.row {
    margin-right: -15px;
    margin-left: -15px;
}

.group_rating_order {
    max-height: 15px;
    position: relative;
    min-height: 15px;
}
.fl {
    margin-bottom: 5px;
}
.product_rating_star .star_10 {
    background: url("/Images/star_1.png") center no-repeat;
}
.product_rating_star i {
    margin-right: 2px;
    width: 16px;
    height: 15px;
}
.product_rating_star i {
    display: inline-block;
    font-size: 0;
    vertical-align: text-bottom;
}
</style>
@foreach (var item in Model.ListReviews)
{
    <div class="review_strip_single">
        <img src="~/Images/UserAvatar/@item.Avatar" alt="" class="img-circle">
        <small> - @Html.DisplayFor(modelItem => item.CreatedDate) -</small>
        <h4><strong>@item.Fullname</strong></h4>
        <p>
            @Html.Raw(item.Comment)
        </p>
        <div class="row">
            <div class="col-md-4">
                <div class="group_rating_order">
                    <div class="rating_start fl">
                        <span class="product_rating_star">
                            @for (int i = 0; i < item.PriceGradeId; i++)
                            {
                                <i class="star_10"></i>
                            }
                        </span>
                    </div>
                </div>
                Giá cả
            </div>
            <div class="col-md-4">
                <div class="group_rating_order">
                    <div class="rating_start fl">
                        <span class="product_rating_star">
                            @for (int i = 0; i < item.QualityGradeId; i++)
                            {
                                <i class="star_10"></i>
                            }
                        </span>
                    </div>
                </div>
                Chất lượng
            </div>
            <div class="col-md-4">
                <div class="group_rating_order">
                    <div class="rating_start fl">
                        <span class="product_rating_star">
                            @for (int i = 0; i < item.ServiceGradeId; i++)
                            {
                                <i class="star_10"></i>
                            }
                        </span>
                    </div>
                </div>
                Phục vụ
            </div>
            
        </div>
    </div>
}

