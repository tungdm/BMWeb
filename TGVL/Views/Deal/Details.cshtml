@model TGVL.Models.DealDetailsViewModel

@{
    ViewBag.Title = "DealDetail";
    Layout = "~/Views/Shared/_HomePageViewLayout.cshtml";

    List<Warehouse> ListShop = ViewBag.ListShop;
}

@Styles.Render("~/Content/searchproductcss")

<style>
    .item-img-info {
        width: 250px;
        height: 220px;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }

    .item-inner {
        width: 250px;
        height: 350px;
        display: block;
        vertical-align: top;
    }

    .col-item {
        width: 100%;
        height: auto;
        padding: 10px;
        margin-bottom: 20px;
    }

    h3 {
        border-bottom: none 1px rgba(100, 100, 100, .30);
    }

    #deal_border {
        border: 1px solid #eaeaea;
        background: #fff;
    }

    #time {
        border-left: 1px solid #eaeaea;
        padding-left: 20px;
    }

    .more_item {
        position: absolute;
        /*top:10px;*/
        right: 10px;
        height: 28px;
        padding: 4px 10px;
        margin-top: -150px;
        /*margin-top:10px;*/
        background: rgba(0, 0, 0, 0.55);
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
    }

    .item-box-hover {
        opacity: 0;
        position: absolute;
        top: 0px;
        bottom: 0px;
        left: 0px;
        right: 0px;
        padding: 0 10px;
        color: #fff;
        z-index: 5;
    }

    .view .view_detail {
        padding: 6px 12px;
        width: 110px;
        height: 34px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -55px;
        margin-top: -80px;
        line-height: 22px;
        font-size: 14px;
        font-weight: 700;
        text-decoration: none;
        background: #73bc28;
        color: #fff;
        text-transform: uppercase;
        text-align: center;
        -webkit-border-radius: 0px;
        -moz-border-radius: 0px;
        border-radius: 0px;
    }

    .deal_discount {
        display: inline-block;
        width: 55px;
        height: 24px;
        padding: 0 2px 0 10px;
        line-height: 25px;
        background: url("/Images/discount.svg") no-repeat;
        background-size: contain;
        color: #fff;
        font-size: 18px;
        font-weight: 400;
        vertical-align: text-top;
        margin-left: 10px;
        vertical-align: 4px;
    }

    .btn-sold-out {
        min-width: 175px;
        background: #ed1c24 no-repeat 12px 50%;
        background-size: 28px 28px;
        color: #fff;
        font-size: 18px;
        font-weight: 700;
    }
</style>

<section class="main-container" style="background:#f4f4f4">
    <div class="main container">
        <div class="col-main">
            <div class="row" id="deal_border">
                <div class="col-md-12">
                    <div class="product-view">
                        <div class="product-essential">
                            <div class="product-img-box col-sm-4 col-xs-12">
                                <div class="product-image">
                                    <div>
                                        <img src="~/Images/Product/Warehouse/@Model.ProductImage" width="100" height="100" />
                                    </div>
                                </div>

                                <div class="clear"></div>
                            </div>
                            <div class="product-shop col-sm-8 col-xs-12">
                                <div class="product-name">
                                    @{
                                        var message = "";
                                        message = Model.Expired ? "(Expired)" : "";
                                    }
                                    <h1>@Model.Title <span id="expired">@message</span></h1>
                                </div>
                                <div class="short-description">
                                    <p>
                                        @Model.ShortDescription
                                    </p>
                                    <p>
                                        Còn lại: <span id="quantity-remain" style="font-size:24px">@Model.Quantity</span> @Model.UnitType
                                    </p>
                                </div>
                                <hr />
                                <div class="price-block">
                                    <div class="price-box">
                                        <p class="old-price"> Giá gốc: <span class="price-label">Regular Price:</span> <span class="price"> @Html.DisplayFor(model => model.UnitPrice)/@Model.UnitType </span> </p>
                                        <br />
                                        <p class="special-price"> <span class="price-label">Special Price</span> <span class="price"> @Html.DisplayFor(model => model.PriceSave)/@Model.UnitType</span> <span class="deal_discount">@Model.Discount%</span></p>
                                    </div>
                                </div>
                                <hr />
                                @if (!Model.Expired)
                                {
                                    <div class="add-to-box">
                                        @using (Ajax.BeginForm("AddToCart",
new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "updateCart(data, status, xhr)"
}
))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.HiddenFor(model => model.Id)
                                            @Html.HiddenFor(model => model.Quantity)
                                            <div class="add-to-cart">
                                                <label>Số lượng :</label>
                                                @Html.EditorFor(model => model.CustomerQuantity, new { htmlAttributes = new { @style = "padding:4px 10px" } })
                                                @Html.ValidationMessageFor(model => Model.CustomerQuantity, "", new { @class = "text-danger" })
                                            </div>
                                            <div>
                                                <button type="submit" class="button btn-cart" style="font-size:20px"><span>THÊM VÀO GIỎ HÀNG</span></button>
                                            </div>
                                            <br />


                                        }
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <button type="button" class="btn btn-sold-out">HẾT HẠN</button>
                                    </div>
                                    <br />
                                }
                                <br />
                                <br />
                                <div class="toggle-content">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <i class="fa fa-user-circle-o"></i> &nbsp; <span id="num-buyer" style="font-size:18px">@Model.NumBuyer</span> <span style="font-size:18px">người đã mua</span>
                                        </div>
                                        <div class="col-md-8">
                                            <div id="time" class="more_item">
                                                @*<span id="countdown-2">
                                                    </span>*@
                                                <i class="fa fa-clock-o" aria-hidden="true"></i>&nbsp; <span class="count-down" data-time="@Model.DueDateCountdown" style="font-size:18px"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
