@using TGVL.Models;
@model List<DealBriefViewModel>
@{
    ViewBag.Title = "ViewHotDeal";
    Layout = "~/Views/Shared/_HomePageViewLayout.cshtml";
}

<style>
    .item-img-info {
        width: 250px;
        height: 220px;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }

    .item-inner {
        width: 250px;
        height: 350px;
        display: block;
        vertical-align: top;
    }

    .col-item {
        width: 100%;
        height: auto;
        padding: 10px;
    }

    .more_item {
        position: absolute;
        /*top:10px;*/
        right: 10px;
        height: 28px;
        padding: 4px 10px;
        margin-top: -150px;
        /*margin-top:10px;*/
        background: rgba(0, 0, 0, 0.55);
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
    }

    .item-box-hover {
        opacity: 0;
        position: absolute;
        top: 0px;
        bottom: 0px;
        left: 0px;
        right: 0px;
        padding: 0 10px;
        color: #fff;
        z-index: 5;
    }

    .view .view_detail {
        padding: 6px 12px;
        width: 110px;
        height: 34px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -55px;
        margin-top: -80px;
        line-height: 22px;
        font-size: 14px;
        font-weight: 700;
        text-decoration: none;
        background: #73bc28;
        color: #fff;
        text-transform: uppercase;
        text-align: center;
        -webkit-border-radius: 0px;
        -moz-border-radius: 0px;
        border-radius: 0px;
    }
    .deal_discount {
        display: inline-block;
        width: 55px;
        height: 24px;
        padding: 0 2px 0 10px;
        line-height: 25px;
        background: url("/Images/discount.svg") no-repeat;
        background-size: contain;
        color: #fff;
        font-size: 18px;
        font-weight: 400;
        vertical-align: text-top;
        margin-left: 10px;
        vertical-align: 4px;
    }
</style>

<div class="main-container col2-left-layout" style="background:#f4f4f4">
    <div class="main container">
        <div class="row">
            <section class="col-main col-sm-12">
                <div class="category-title">
                    <h1>DEAL NỔI BẬT</h1>
                </div>
                <div class="category-products">
                    <ul class="products-grid">
                        @foreach (var item in Model)
                        {
                            <li class="item col-sm-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="col-item">
                                    <div class="item-inner">
                                        <div class="item-img">
                                            <div class="item-img-info">
                                                <a href="product_detail.html" class="product-image"> <img src="~/Images/Product/SysProduct/@item.Image"> </a>
                                                <div class="item-box-hover">
                                                    <div class="more_item">
                                                        <i class="fa fa-clock-o" aria-hidden="true"></i>&nbsp; <span class="count-down" data-time="@item.DueDateCountdown" style="font-size:13px"></span>
                                                    </div>
                                                    <span class="view"><a class="view_detail" href="/Deal/Details/@item.Id">Xem ngay</a></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info">
                                            <div class="info-inner">
                                                <div class="item-title" style="text-align:left"> <h3 style="font-size:14px">@item.Title</h3></div>
                                                <div class="item-content">
                                                    <div class="price-block" style="text-align:left;margin-top:10px">
                                                        <div class="price-box">
                                                            <p class="special-price"> <span class="price-label">Special Price</span> <span class="price" style="font-size:20px">@Html.DisplayFor(itemModel => item.SavePrice)</span> <span class="deal_discount">@item.Discount%</span></p>
                                                            <br />
                                                            <p class="old-price"> <span class="price-label">Regular Price:</span> <span class="price" style="font-size:18px">@Html.DisplayFor(itemModel => item.UnitPrice)</span> &nbsp; <span class="pull-right" style="font-size:16px"> <i class="fa fa-user"> @item.NumBuyer</i></span></p>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </section>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        clock();
    });
</script>