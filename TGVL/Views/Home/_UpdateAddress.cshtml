@model TGVL.Models.OrderViewModel


<ul>
    <li>
        <div class="input-box">
            <strong>
                @Html.DisplayFor(model => model.CustomerFullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Họ tên người nhận" } })
            </strong>
        </div>
    </li>
    <li>
        <div class="input-box">

            @Html.DisplayFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Số điện thoại liên hệ" } })

        </div>
    </li>

    <li>
        <div class="input-box" style="width:100%">

            @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Địa chỉ nhận hàng" } })

        </div>

    </li>
</ul>

<div class="box-footer" style="padding-right:10px">
    <div class="pull-left">
        <button type="button" class="btn btn-default" onclick="updateExistedAddress()"><span>Sửa địa chỉ</span></button>
    </div>
    <div class="pull-right">
        <button type="submit" class="btn btn-success" onclick="gotToCheckOut()" style="font-size:18px"><span>TIẾP TỤC</span></button>
    </div>
</div>


