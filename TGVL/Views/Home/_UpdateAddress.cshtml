@model TGVL.Models.OrderViewModel
@using TGVL.MyHelper

<ul>
    <li>
        <div class="input-box" style="font-size:medium">
            <strong>
                @Html.DisplayFor(model => model.CustomerFullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Họ tên người nhận" } })
            </strong>
        </div>
    </li>
    <li>
        <div class="input-box" style="font-size:medium">

            @Html.FormatPhoneNum(Model.PhoneNumber)

        </div>
    </li>

    <li>
        <div class="input-box" style="width:100%;font-size:medium">

            @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Địa chỉ nhận hàng" } })

        </div>
    </li>
</ul>
<div style="padding-bottom:10px">
    <button type="button" class="btn btn-default" onclick="updateExistedAddress()" style="font-size:16px"><span>Sửa địa chỉ</span></button>
</div>

<div class="box-footer" style="padding-right:10px;padding-top:30px">
    <div class="pull-left">
        <a href="/Home/ShoppingCart" style="font-size:14px"><i class="fa fa-chevron-left"></i><strong> Quay lại giỏ hàng</strong></a>
    </div>
    <div class="pull-right">
        <button type="submit" class="btn btn-success" onclick="gotToCheckOut()" style="font-size:20px"><span>TIẾP TỤC</span></button>
    </div>
</div>

