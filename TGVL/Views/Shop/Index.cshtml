@model TGVL.Models.IndexShopViewModel
@{
    ViewBag.Title = "Shop Index";
    Layout = "~/Views/Shared/_ManageShopViewLayout.cshtml";
}

<script type="text/javascript">
  window.onload = function () {
    var chart = new CanvasJS.Chart("chartContainer",
    {
      
        data: [
      {
        type: "area",
        dataPoints: [//array

        { x: new Date(2016, 00), y: 2600 },
        { x: new Date(2016, 01), y: 3800 },
        { x: new Date(2016, 02), y: 4300 },
        { x: new Date(2016, 03), y: 2900 },
        { x: new Date(2016, 04), y: 4100 },
        { x: new Date(2016, 05), y: 4500 },
        { x: new Date(2016, 06), y: 8600 },
        { x: new Date(2016, 07), y: 6400 },
        { x: new Date(2016, 08), y: 5300 },
        { x: new Date(2016, 09), y: 6000 }
        ]
      }
      ]
    });
    console.log(new Date(2016, 01));
    chart.render();
  }
</script>

<div class="row top_tiles">
    <div class="row top_tiles">
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon"><i class="fa fa-eye"></i></div>
                <div class="count">179</div>
                <h3>Truy cập hôm nay</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon"><i class="fa fa-shopping-cart"></i></div>
                <div class="count">179</div>
                <h3>Đơn hàng mới</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon"><i class="fa fa-thumbs-up"></i></div>
                <div class="count">179</div>
