
@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Views/Shared/_ManageShopViewLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3><strong>Tạo mới sản phẩm</strong></h3>
                <div class="clearfix"></div>
            </div>
            <div x_content>
                <div id="wizard" class="form_wizard wizard_horizontal">
                    <ul class="wizard_steps">
                        <li>
                            <a href="#step-1">
                                <span class="step_no">1</span>
                                <span class="step_descr">
                                    Bước 1<br />
                                    <small>Chọn sản phẩm</small>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#step-2">
                                <span class="step_no">2</span>
                                <span class="step_descr">
                                    Bước 2<br />
                                    <small>Mô tả khái quát</small>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#step-3">
                                <span class="step_no">3</span>
                                <span class="step_descr">
                                    Bước 3<br />
                                    <small>Mô tả chi tiết</small>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#step-4">
                                <span class="step_no">4</span>
                                <span class="step_descr">
                                    Bước 4<br />
                                    <small>Xác nhận thông tin</small>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <div id="step-1">
                        <form class="form-horizontal form-label-left">

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Danh mục<span class="required"> *</span></label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <select class="form-control" style="height:auto">
                                        <option>Xi măng</option>
                                        <option>Cát</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Nhà sản xuất<span class="required"> *</span></label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <select class="form-control" style="height:auto">
                                        <option>Xi măng Hà Tiên</option>
                                        <option>Xi măng Bỉm Sơn</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Sản phẩm<span class="required"> *</span></label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <select class="form-control" style="height:auto">
                                        <option>Xi măng Hocim</option>
                                        <option>Xi măng PCB40</option>
                                    </select>
                                </div>
                            </div>

                        </form>

                    </div>
                    <div id="step-2">
                        <form class="form-horizontal form-label-left">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Giá cả <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" required="required" class="form-control col-md-7 col-xs-12"
                                           placeholder="89.000 VNĐ">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Đơn vị  <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" required="required" class="form-control col-md-7 col-xs-12"
                                           placeholder="bao">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Số lượng <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" required="required" class="form-control col-md-7 col-xs-12"
                                           placeholder="42">

                                </div>
                            </div>
                        </form>
                    </div>

                    <div id="step-3">  
                        <div class="col-md-12 col-sm-12 col-xs-12">
                             <div class="x_panel">
                                 <div class="x_title">
                                     <h3><strong>Thông số kỹ thuật</strong></h3>
                                     <p>Vui lòng nhập đặc tính, thông số của sản phẩm vào bảng dưới đây</p>
                                     <div class="clearfix"></div>
                                 </div>
                                 <div class="x_content">
                                     <table class="table table-bordered">
                                         <thead>
                                             <tr>
                                                 <th>STT</th>
                                                 <th>Đặc tính</th>
                                                 <th>Thông số</th>
                                             </tr>
                                         </thead>
                                         <tbody>
                                             <tr>
                                                 <td>1</td>
                                                 <td>
                                                     <input type="text" class="form-control" placeholder="Trọng lượng"/>
                                                 </td>
                                                 <td>
                                                     <input type="text" class="form-control" placeholder="5kg"/>
                                                 </td>
                                             </tr>
                                         </tbody>
                                     </table>
                                 </div>
                             </div>
                        </div>
                    </div>
                    <div id="step-4">
                        <h3><strong>Xác nhận thông tin</strong></h3>
                        <form class="form-horizontal form-label-left">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Danh mục<span class="required"> *</span></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="form-control" style="height:auto">
                                        <option>Xi măng</option>
                                        <option>Cát</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Nhà sản xuất<span class="required"> *</span></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="form-control" style="height:auto">
                                        <option>Xi măng Hà Tiên</option>
                                        <option>Xi măng Bỉm Sơn</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Sản phẩm<span class="required"> *</span></label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="form-control" style="height:auto">
                                        <option>Xi măng Hocim</option>
                                        <option>Xi măng PCB40</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Giá cả <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" required="required" class="form-control col-md-7 col-xs-12"
                                           placeholder="89.000 VNĐ">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Đơn vị  <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" required="required" class="form-control col-md-7 col-xs-12"
                                           placeholder="bao">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    Số lượng <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" required="required" class="form-control col-md-7 col-xs-12"
                                           placeholder="42">

                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

