@using Microsoft.AspNet.Identity;
@model TGVL.Models.IndexViewModel
@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_HomePageViewLayout.cshtml";
}
@Styles.Render("~/Content/searchproductcss")
@*<p class="text-success">@ViewBag.StatusMessage</p>*@

<div class="main-container col2-left-layout" style="background:#f4f4f4">
    <div class="main container">
        <div class="row">
            <aside class="col-left sidebar col-sm-3">
                @Html.Partial("_MenuPartial")

            </aside>
            <div class="col-main col-sm-9">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">THÔNG TIN CÁ NHÂN</a></li>
                        <li>
                            @if (Model.HasPassword)
                            {
                                @Html.ActionLink("THAY ĐỔI MẬT KHẨU", "ChangePassword")
                            }
                            else
                            {
                                @Html.ActionLink("Tạo mới mật khẩu", "SetPassword")
                            }
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            @using (Html.BeginForm("UpdateProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "demo-form2" }))
                            {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="fullname">
                                    Họ và tên @*<span class="required">*</span>*@
                                </label>
                                <div class="col-md-9 col-xs-12">
                                    @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control col-md-7 col-xs-12", id = "fullname" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="phonenumber">
                                    Số điện thoại
                                </label>
                                <div class="col-md-9 col-xs-12">
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control col-md-7 col-xs-12", id = "phonenumber" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Địa chỉ</label>
                                <div class="col-md-9 col-xs-12">
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control col-md-7 col-xs-12", id = "address" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-xs-12">Ngày sinh</label>
                                <div class="col-md-9 col-xs-12">
                                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @style = "float:left" } })
                                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    @*<button class="btn btn-primary" type="button">Cancel</button>*@
                                    @*<button class="btn btn-primary" type="reset">Reset</button>*@
                                    <button type="submit" class="btn btn-success">Cập nhật</button>
                                </div>
                            </div>
                                                }
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




